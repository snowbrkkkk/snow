-- Carregar WindUI oficial
local WindUI = loadstring(game:HttpGet("https://raw.githubusercontent.com/Footagesus/WindUI/main/build/main.lua"))()

-- Injetar Label dentro das Tabs
function WindUI.Tab:Label(props)
    local btn = self:Button({
        Title = props.Title or "",
        Desc = "",
        Locked = true,
        Callback = function() end
    })

    if btn.Instance then
        btn.Instance.BackgroundTransparency = 1
        local arrow = btn.Instance:FindFirstChild("Arrow") or btn.Instance:FindFirstChildOfClass("ImageLabel")
        if arrow then arrow.Visible = false end
    end

    local label = {}
    function label:Set(text)
        btn:SetTitle(text)
    end

    return label
end

return WindUI
